<UserControl x:Class="DortanApp.UCCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DortanApp"
             mc:Ignorable="d" >
    
    <StackPanel>
        <Label 
            x:Name="labCreer" 
            FontSize="36"
            FontWeight="Bold"
            Margin="0,20,0,20"
            HorizontalAlignment="Center" 
            Content="Créer Activité"/>
        
        
        <Label 
            x:Name="lbCreerActivite"
            Content="Nom" 
            FontSize="18"
            HorizontalAlignment="Left" 
            Margin="40,20,0,0" />
        <TextBox 
            x:Name="txtNomActivite" 
            Margin="40,0,40,0" 
            TextWrapping="Wrap" />

        <Button 
            x:Name="btAjouterActivite"
            Content="Valider" 
            HorizontalAlignment="Right" 
            Margin="0,20,40,0" 
            Height="20"
            Width="60" 
            Click="Button_Click" />
        
    </StackPanel>
</UserControl>
